{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "globals": {
    "debounce": "readonly",
    "handleError": "readonly",
    "safeJSONParse": "readonly",
    "safeGetStorage": "readonly",
    "safeSetStorage": "readonly"
  }
}
