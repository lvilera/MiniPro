{
  "name": "sports-card-album",
  "version": "2.0.0",
  "description": "Sports Card Collection Album - Pack Opening Edition",
  "main": "electron-main.js",
  "scripts": {
    "start": "npx http-server -p 8080 -c-1",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint app.js electron-main.js",
    "lint:fix": "eslint app.js electron-main.js --fix",
    "build": "npm run lint && npm run test",
    "serve": "npx http-server -p 8080",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:linux": "electron-builder --linux",
    "capacitor:init": "npx cap init",
    "capacitor:add:ios": "npx cap add ios",
    "capacitor:add:android": "npx cap add android",
    "capacitor:sync": "npx cap sync",
    "capacitor:open:ios": "npx cap open ios",
    "capacitor:open:android": "npx cap open android",
    "capacitor:build:ios": "npx cap sync && npx cap open ios",
    "capacitor:build:android": "npx cap sync && npx cap open android",
    "pwa:serve": "npx http-server -p 8080 -c-1 --cors",
    "icons:generate": "node scripts/generate-icons.js"
  },
  "keywords": [
    "sports",
    "cards",
    "collection",
    "game",
    "pack-opening",
    "pwa",
    "electron",
    "capacitor"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/cli": "^5.5.1",
    "@jest/globals": "^29.7.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "sharp": "^0.33.1"
  },
  "dependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/ios": "^5.5.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "app.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "build": {
    "appId": "com.sportscard.album",
    "productName": "Sports Card Album",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "app.js",
      "styles.css",
      "data.json",
      "manifest.json",
      "service-worker.js",
      "icons/**/*",
      "electron-main.js",
      "electron-preload.js"
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "icons/icon-512x512.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "icons/icon-512x512.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "icons/icon-512x512.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game"
    }
  }
}
